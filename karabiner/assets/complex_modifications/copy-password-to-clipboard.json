{
  "title": "Copy password to clipboard",
  "rules": [
    {
      "description": "Copy password to clipboard",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "cat ~/.pass | tr -d '\n' | pbcopy"
            }
          ]
        }
      ]
    }
  ]
}
